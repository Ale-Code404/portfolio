---
interface Props {
  title: string;
  image?: string;
}

const { title, image } = Astro.props;
---

<div>
  <article class="flex flex-col rounded-md h-full bg-gray-100 dark:bg-gray-800">
    <!-- Card image -->
    {image && <img src={image} />}
    <!-- Card header -->
    <header class="p-4">
      <h4 class="text-xl">{title}</h4>
    </header>
    <!-- Card content -->
    <div class="flex flex-col flex-grow gap-2 px-4 pb-4">
      <slot />
    </div>
  </article>
</div>
