---
const { title, description } = Astro.props;

import { fade, ViewTransitions } from "astro:transitions";
import Footer from "@components/common/Footer.astro";
import Head from "@components/common/Head.astro";
import Header from "@components/common/Header.astro";
---

<!doctype html>
<html lang="es">
  <Head
    title={title}
    description={description}>
    <ViewTransitions />
  </Head>

  <body class="dark dark:bg-zinc-900 dark:text-white">
    <!-- Wrapper -->
    <div class="flex flex-col min-h-screen max-w-3xl mx-auto px-6 md:px-8">
      <Header />

      <main
        class="flex flex-col flex-grow"
        transition:animate={fade({ duration: "150ms" })}>
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
